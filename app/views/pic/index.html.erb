<div class="bs-example" data-example-id="navbar-form">
	<nav class="navbar navbar-default navbar-static-top"> 
		<div class="container-fluid"> 
			<div class="navbar-header"> 
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2" aria-expanded="false"> 
				<span class="sr-only">Toggle navigation</span> 
				<span class="icon-bar"></span> 
				<span class="icon-bar"></span> 
				<span class="icon-bar"></span> 
			</button>
				<%= link_to "Gif APP", root_url, class: 'navbar-brand' %>
			</div> 
			<div class="collapse navbar-collapse" id="navbar-collapse">

				<ul class="nav navbar-nav navbar-left">

					<%= form_tag pic_index_path, :method => 'get', class:'navbar-form navbar-left', role: 'search' do %>
				  		<%= text_field_tag :search, params[:search], :placeholder => 'Enter your favorite tag to search', :class => 'form-control', :style => "width:300px;" %>
				  		<%= submit_tag "Search", class:' btn btn-success' %>
					<% end %> 
					<li><button onclick="myFunction()" class="btn btn-info navbar-btn">Reload Page</button></li>
				</ul>

			</div> 
		</div> 
	</nav> 
</div>


<script type="text/javascript">
function myFunction() {
    location.reload();
}
</script>

<style type="text/css">
html {
	background-image: url('<%= @pic %>');
	background-size: 100% 100%;
	background-repeat: no-repeat;
	width: 100%;
	height: 100%;
}
</style>
